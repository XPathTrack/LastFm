<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp">

        <ImageView
            android:id="@+id/iv_popular_artist"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_gravity="top|center_horizontal" />

        <TextView
            android:id="@+id/tv_popular_artist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="3dp"
            android:text="#"
            android:textColor="@color/black_app"
            android:textSize="11sp"
            app:drawableStartCompat="@drawable/user_ico" />

        <TextView
            android:id="@+id/tv_popular_artist_listeners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="3dp"
            android:text="#"
            android:textColor="@color/black_app"
            android:textSize="11sp"
            app:drawableStartCompat="@drawable/listen_ico" />

        <TextView
            android:id="@+id/tv_popular_artist_playcount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="3dp"
            android:text="#"
            android:textColor="@color/black_app"
            android:textSize="11sp"
            android:visibility="gone"
            app:drawableStartCompat="@drawable/play_ico" />

        <TextView
            android:id="@+id/tv_popular_artist_web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="3dp"
            android:text="#"
            android:textColor="@color/black_app"
            android:textSize="11sp"
            app:drawableStartCompat="@drawable/web_ico" />
    </LinearLayout>

</androidx.cardview.widget.CardView>